private String sumber;
private Image iconGambar;
    private void jAmbilGambarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        JFileChooser buka = new JFileChooser();
        Component jScrollPanel = null;
        int ambil = buka.showOpenDialog (jScrollPanel);
        if (ambil==JFileChooser.APPROVE_OPTION){
            sumber = buka.getSelectedFile().getPath();
            jLabel5.setIcon(new ImageIcon(sumber));
        }
        iconGambar = new ImageIcon(sumber).getImage();
        int ukurX = iconGambar.getWidth(null);
        int ukurY = iconGambar.getHeight(null);
        jTextLebar.setText(Integer.toString(ukurX));
        jTextTinggi.setText(Integer.toString(ukurY));
    }                                            

    private void jTextTinggiActionPerformed(java.awt.event.ActionEvent evt) {                                            
